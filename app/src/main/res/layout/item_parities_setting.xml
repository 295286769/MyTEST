<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        >

        <TextView
            android:id="@+id/item_parities_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:textColor="@color/wealth_font"
            android:textSize="@dimen/text_size_middle"
            android:text="美元"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/img1"
            android:layout_toRightOf="@+id/item_parities_name"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/item_parities_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5478"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/green_theme"
                android:gravity="right"
                android:layout_gravity="right"
                />

            <TextView
                android:id="@+id/item_parities_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-09-07"
                android:textSize="@dimen/text_size_little"
                android:gravity="right"
                android:layout_gravity="right"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_front_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wealth_line"
        />

</LinearLayout>