<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:background="@color/wealth_gray_bg"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/text_head1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|center_vertical"
                    android:text="外币"/>

                <TextView
                    android:id="@+id/txtv_foreign_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:layout_toRightOf="@+id/text_head1"
                    android:background="@null"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wealth_font"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/text_head2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|center_vertical"
                    android:text="汇率(外币/本币)"/>

                <EditText
                    android:id="@+id/et_parities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:layout_toRightOf="@+id/text_head2"
                    android:background="@null"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/wealth_font"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/text_head3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|center_vertical"
                    android:text="更新时间"/>

                <TextView
                    android:id="@+id/txtv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:minHeight="40dp"
                    android:textColor="@color/wealth_font"
                    android:textSize="@dimen/text_size_middle"
                    android:text=""
                    android:gravity="right|center_vertical"
                    android:layout_toRightOf="@+id/text_head3"
                    android:inputType="number"
                    android:background="@null"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/txtv_delete_parities"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/actionsheet_red"
                    android:textSize="@dimen/text_size_middle"
                    android:gravity="center"
                    android:text="删除"/>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>