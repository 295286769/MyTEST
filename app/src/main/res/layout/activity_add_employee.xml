<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@color/wealth_gray_bg"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/text_head1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical"
                android:text="名称"/>

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:text=""
                android:gravity="right|center_vertical"
                android:layout_toRightOf="@+id/text_head1"
                android:background="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/wealth_font"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/text_head2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical"
                android:text="手机"/>

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:text=""
                android:gravity="right|center_vertical"
                android:layout_toRightOf="@+id/text_head2"
                android:background="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/wealth_font"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/text_head3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical"
                android:text="邮箱"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:text=""
                android:gravity="right|center_vertical"
                android:layout_toRightOf="@+id/text_head3"
                android:inputType="number"
                android:background="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/text_head4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical"
                android:text="备注"/>

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:text=""
                android:gravity="right|center_vertical"
                android:layout_toRightOf="@+id/text_head4"
                android:background="@null"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"

            >

            <TextView
                android:id="@+id/txtv_bulk_import"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/wealth_font"
                android:textSize="@dimen/text_size_middle"
                android:layout_alignParentLeft="true"
                android:gravity="center|center_vertical"
                android:background="@color/white"
                android:text="批量导入"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>