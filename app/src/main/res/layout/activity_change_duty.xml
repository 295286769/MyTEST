<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6ff">
    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/linearlayout_split_line"
        android:showDividers="end"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <!--行业类型-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_60_black" />

        <RelativeLayout
            android:id="@+id/change_duty_layout"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="46dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="@string/duty_name"
                android:textColor="@color/colorAllTextBlack"
                android:textSize="@dimen/text_size_middle"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:src="@drawable/img_back_right" />

            <TextView
                android:id="@+id/txtv_change_duty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:hint=""
                android:textSize="@dimen/text_size_middle" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:src="@drawable/img_back_right"
                android:visibility="invisible" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_60_black" />
    </LinearLayout>
</RelativeLayout>
