<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picker_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-620dp"
    android:background="#99232323"
    android:visibility="gone" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        <com.richfinancial.qiyifinance.ui.PickerScrollView
            android:id="@+id/pickerscrlllview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/view_show"
            android:layout_below="@id/pickerscrlllview"
            android:layout_marginTop="-95dp"
            android:background="@drawable/picker_tv_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_ok_cancel"
            android:background="#f6f6ff">

            <Button
                android:id="@+id/picker_cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:button="@null"
                android:clickable="false"
                android:checked="false"
                android:text="取消"
                android:gravity="center"
                android:background="@null"
                android:textSize="@dimen/text_size_middle" />
            <!-- 标准化 -->
            <Button
                android:id="@+id/picker_ok"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:button="@null"
                android:text="确定"
                android:clickable="false"
                android:gravity="center"
                android:background="@null"
                android:textSize="@dimen/text_size_middle" />
          </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/ll_ok_cancel" />


    </RelativeLayout>

</RelativeLayout>